<?xml version="1.0" encoding="utf-8" ?>
<ContentPage Title="About Us" 
             xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="JBC.AboutUs"
             Padding="20, 0, 20, 0">

       <ScrollView>
        <StackLayout 
            HorizontalOptions="CenterAndExpand">

            <Label Text="About Us" 
                    FontSize="Large" 
                    FontFamily="SinkinSans" 
                    TextColor="Black" 
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center">
                <Label.FontFamily>
                <OnPlatform x:TypeArguments="x:String">
                    <OnPlatform.iOS>RaphLanokFuture</OnPlatform.iOS>
                    <OnPlatform.Android>RaphLanokFuture.ttf#RaphLanokFuture</OnPlatform.Android>
                </OnPlatform>
                </Label.FontFamily>
            </Label>

            <Label x:Name="AboutLabel"
                    FontFamily="SinkinSans" 
                    TextColor="Black" />

            <Image x:Name="Pastor"
                    HeightRequest="125" />

            <BoxView Color="#800000" 
                 HeightRequest="5"
                 HorizontalOptions="Fill" 
                 VerticalOptions="Center" 
                 />



            <Label Text="Find Us" 
                    FontSize="35" 
                    FontFamily="SinkinSans" 
                    TextColor="Black" 
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center">
                <Label.FontFamily>
                    <OnPlatform x:TypeArguments="x:String">
                        <OnPlatform.iOS>RaphLanokFuture</OnPlatform.iOS>
                        <OnPlatform.Android>RaphLanokFuture.ttf#RaphLanokFuture</OnPlatform.Android>
                    </OnPlatform>
                </Label.FontFamily>
            </Label>

            <Label x:Name="AddressLabel"
                    FontSize="15"  
                    FontFamily="SinkinSans"
                    TextColor="Black"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>

            <BoxView Color="#800000" 
                 HeightRequest="5"
                 HorizontalOptions="Fill" 
                 VerticalOptions="Center" 
                 />


            <Label Text="Contact Us" 
                    FontSize="35" 
                    FontFamily="SinkinSans" 
                    TextColor="Black" 
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>

            <Label Text="Office Hours:"
                    FontSize="15"
                    FontFamily="SimkinSans"
                    TextColor="Black"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>

            <Label x:Name="OfficeHoursLabel"
                    FontSize="15"
                    FontFamily="SinkinSans"
                    TextColor="Black" 
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>

            <Label x:Name="NumberLabel"
                    FontSize="15"  
                    FontFamily="SinkinSans"
                    TextColor="Black"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>


            <BoxView Color="#800000" 
                 HeightRequest="5"
                 HorizontalOptions="Fill" 
                 VerticalOptions="Center" 
                 />

            <Label Text="Sermon Times" 
                    FontSize="35"
                    FontFamily="SinkinSans" 
                    TextColor="Black"
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>

            <Label x:Name="TimesLabel"
                    FontSize="15"
                    FontFamily="SinkinSans"
                    TextColor="Black" 
                    VerticalTextAlignment="Center"
                    HorizontalTextAlignment="Center"/>
        </StackLayout>
    </ScrollView>

</ContentPage>